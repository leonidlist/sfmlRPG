{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildServer",
            "type": "shell",
            "command": "g++-7 ServerMain.cpp ServerPlayer.cpp ServerPlayer.hpp -o server -lsfml-system -lsfml-network",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "buildClient",
            "type": "shell",
            "command": "g++-7 Client.cpp Entity.cpp Entity.hpp Player.cpp Player.hpp -o client -lsfml-window -lsfml-graphics -lsfml-system -lsfml-network",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}